<!DOCTYPE html>
<html>
    <head>
        <title>@Page.Title</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="stylesheet" href="/common.css" />
        <script src="/addStylsheet.js"></script>
        @RenderSection("head", required: false)
    </head>
    <body>
        <header>
            <div class="headerSection" style="background-color: white;">
                <div class="headerPush">
                    <a href="/index.cshtml">
                        <div class="headerWrap">
                            <div id="logo"></div>
                            <div id="title">Falkarna Syd</div>
                        </div>
                    </a>
                </div>
            </div>
            <div class="promotionBtn float-right" id="promoPlaceholder">
            </div>
            <div class="headerSection" style="background-color: rgb(250,250,250);">
                <div class="headerPush">
                    <nav>
                        <a href="/index.cshtml"><div class="menuBtn">Hem</div></a>
                        <a href="#"><div class="menuBtn">Diskussion</div></a>
                        <a href="http://falkarna.quickbutik.com" target="_blank"><div class="menuBtn">Webbshop</div></a>
                    </nav>
                </div>
            </div>
        </header>
        <a href="https://apply.cardskipper.se/eid" target="_blank">
            <div class="promotionBtn real">
                <div class="promotionWrap">
                    Gå med idag!
                </div>
            </div>
        </a>
        <main>
            @RenderBody()
        </main>
    </body>
</html>
